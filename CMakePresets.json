{
	"version": 6,
	"configurePresets": [
		{
			"name": "common",
			"binaryDir": "build",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "1",
				"GODOT_CUSTOM_API_FILE": "${sourceDir}/extension_api.json"
			}
		},
		{
			"name": "debug-clang",
			"inherits": "common",
			"generator": "Ninja",
			"binaryDir": "build/clang/debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{			
			"name": "release-clang",
			"inherits": "common",
			"generator": "Ninja",			
			"binaryDir": "build/clang/release",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "debug-web",
			"inherits": "common",
			"generator": "Ninja",
			"binaryDir": "build/web/debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_C_COMPILER": "emcc",
				"CMAKE_CXX_COMPILER": "em++"
			}
		}
	],
	"buildPresets": [
    {
      "name": "debug-build",
      "description": "Build Debug, Clang",
      "configurePreset": "debug-clang",
      "jobs": 8
    },
		{
      "name": "release-build",
      "description": "Release Debug, Clang",
      "configurePreset": "release-clang",
      "jobs": 8
    },
		{
      "name": "web-build",
      "description": "Build Debug, Web",
      "configurePreset": "debug-web",
      "jobs": 8
    }
  ]
}
