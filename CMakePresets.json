{
	"version": 6,
	"configurePresets": [
		{
			"name": "common",
			"binaryDir": "build",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "1",
				"GODOT_CUSTOM_API_FILE": "${sourceDir}/extension_api.json"
			}
		},
		{
			"name": "debug-clang",
			"inherits": "common",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{			
			"name": "release-clang",
			"inherits": "common",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		}
	]
}
